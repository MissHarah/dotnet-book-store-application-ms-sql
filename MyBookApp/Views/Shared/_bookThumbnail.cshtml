@model Bookmodel
<div class="card mb-4 shadow-sm">
    <img src="@(string.IsNullOrEmpty(Model.CoverImageUrl) ? "/img/book/logo.png" : Model.CoverImageUrl)" class="img-thumbnail" />
    <div class="card-body">
        <h3 class="card-title">@(string.IsNullOrEmpty(Model.Title)? "Name is not available" : Model.Title)</h3>
        <p class="card-text">@(string.IsNullOrEmpty(Model.Description) ? "Description is not available " : Model.Description)</p>
        <div class="d-flex justify-content-between  align-items-center">
            <div class="btn-group">
                <a asp-controller="Book" asp-action="GetBook" asp-route-id="@Model.Id" class="btn btn-sm btn btn-outline-secondary">View details</a>
            </div>
        <small class="text-bg-danger-muted">@(string.IsNullOrEmpty(Model.Author) ? "N/A" : Model.Author) </small>
        </div>
    </div>
</div>

